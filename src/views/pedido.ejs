    <li class="nav-item">
      <a class="nav-link " href="https://estoque-farmacia.cyclic.app/pesquisa">Pesquisar</a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" href="https://estoque-farmacia.cyclic.app/pedido">Fazer pedido/faltas</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="https://estoque-farmacia.cyclic.app/pedidos">Pedidos/Faltas</a>
    </li>
  </ul>
  <div class="d-flex flex-column mx-auto justify-content-center align-items-center">




  <form action="/pedido" method="POST">
        
    <div class="form-group">
      <label for="formGroupExampleInput">Produto</label>
      <input type="text" class="form-control" id="formGroupExampleInput" name="nome" >
    </div>        
    <div class="form-group">
      <input type="checkbox" name="reposicao" id="myCheck" onclick="myFunction()" value="FALTA">
      <label for="formGroupExampleInput" id="text">FALTA</label>  
    </div>
    <div class="form-group">    
      <input type="checkbox" onclick="clickMe()">
      <label for="formGroupExampleInput">Nome do cliente</label>
      <input type="text" name="quem_pediu" id="popup" class="hide">
    </div>        
    <div class="form-group">
      <label for="formGroupExampleInput">Quando foi pedido</label>
      <input type="date" class="form-control" id="formGroupExampleInput" name="quando_pediu" >
    </div>        
    <div class="form-group">
      <label for="formGroupExampleInput">Quantidade</label>
      <input type="number" class="form-control" id="formGroupExampleInput" name="qtd" >
    </div>        
    <div class="form-group">
      <label for="formGroupExampleInput">Número da pessoa</label>
      <input type="number" class="form-control" id="formGroupExampleInput" name="numero" >
    </div>        
    <div class="form-group">
      <label for="formGroupExampleInput">Código de barras</label>
      <input type="number" class="form-control" id="formGroupExampleInput" name="barras" >
    </div>        
    <button type="submit" class="btn btn-success my-2 btn-block" style="width: 250px;">Cadastrar</button>
    
    
  </form>
      <script>
        function myFunction() {
  // Get the checkbox
  var checkBox = document.getElementById("myCheck");
  // Get the output text
  var text = document.getElementById("text");
  var cliente = document.getElementById("cliente");        
  // If the checkbox is checked, display the output text
  if (checkBox.checked == true){
        text.style.color = 'red'
    cliente.classList.toggle("hide");
  } else {
        text.style.color = 'black'
    cliente.classList.toggle("show");
  }
}


function clickMe() {
  var text2 = document.getElementById("popup");
  text2.classList.toggle("hide");
  text2.classList.toggle("show");
}
      </script>
     
  
    
